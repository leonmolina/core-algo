{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Current Algorithm File",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Algorithm via CLI",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/tsx",
      "program": "${workspaceFolder}/algo.ts",
      "args": [
        "check",
        "${input:algorithm}",
        "${input:date}"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"]
    }
  ],
  "inputs": [
    {
      "id": "algorithm",
      "type": "promptString",
      "description": "Algorithm name (e.g. backtracking)"
    },
    {
      "id": "date",
      "type": "promptString",
      "description": "Date (e.g. 24-02-2026)",
      "default": ""
    }
  ]
}
